    private static class seguridad {

        public seguridad() {
        }
        
        public void validarUsuario(String[] usuarios ,String user, String password, int intentos){
            if (user.equals("") && password.equals("")) {
                JOptionPane.showMessageDialog(null,"No puede haber campos vacios");
            }
            else{
            int contUser=0,posUser=0;
            for (int i = 0; i < usuarios.length; i++) {
                //System.out.println("usurio actual: "+ usuarios[i] +"  usuario: "+user+" password:  "+password);
                if (i%2==0) {
                    if (usuarios[i].equals((String)user)) {
                        contUser++;
                        posUser=i;
                        break;
                    }
                }
                
            }
            
            if (contUser>0) {
                if (usuarios[posUser+1].equals(password)) {
                    JOptionPane.showMessageDialog(null,"Bienvenido "+user);
                }else{
                    JOptionPane.showMessageDialog(null,"Contraseña incorrecta");
                    
                }
            }
            else{
                JOptionPane.showMessageDialog(null,"MI SUPER PROGRAMA NO ENCONTRO TU USAURIO" );
            }
            
        }
        }
    }
